{
  "manifest_version": 2,
  "name": "VCB",
  "description": "Virtual Classbox",
  "version": "3.1",
  "app": {
    "background": {
      "scripts": ["index.js"]
    }
  },
  "icons": { "16": "icons/16.png", "128": "icons/128.png" },
  "permissions": [{"fileSystem": ["write"]}, "fullscreen", "storage", "experimental", "videoCapture", "audioCapture", "alwaysOnTopWindows", "tabs"]
}